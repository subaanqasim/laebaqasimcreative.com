---
import { Container } from "@components/ui";

import { MobileNavDialog } from "./mobile-nav-dialog";
import ThemeToggle from "./theme-toggle.astro";

const navigation = [
  { name: "Benefits", href: "#benefits" },
  { name: "Recent Work", href: "#recent" },
  { name: "Pricing", href: "#pricing" },
  { name: "Portfolio", href: "/portfolio" },
  { name: "FAQ", href: "#faq" },
];
---

<nav
  aria-label="Global"
  class="fixed left-0 right-0 top-0 z-50 border-b border-gray-950/5 bg-gray-50/50 backdrop-blur dark:border-gray-50/5 dark:bg-gray-950/50"
>
  <Container className="flex items-center py-4">
    <div class="flex flex-1">
      <a href="#" class="-m-1.5 p-1.5">
        <span class="sr-only">Laeba Qasim Creative</span>
        <div class="h-8 w-8 rounded-full bg-gray-500"></div>
      </a>
    </div>

    <div class="lg:hidden">
      <ThemeToggle />
    </div>

    <div class="flex lg:hidden">
      <MobileNavDialog client:load />
    </div>

    <div class="hidden lg:flex lg:gap-x-12">
      {
        navigation.map((item) => (
          <a
            href={item.href}
            class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-100"
          >
            {item.name}
          </a>
        ))
      }
    </div>

    <div class="hidden items-center lg:flex lg:flex-1 lg:justify-end">
      <div class="mr-2 hidden lg:block">
        <ThemeToggle />
      </div>

      <a
        href="/login"
        class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-100"
      >
        Log in <span aria-hidden="true">&rarr;</span>
      </a>
    </div>
  </Container>
</nav>
